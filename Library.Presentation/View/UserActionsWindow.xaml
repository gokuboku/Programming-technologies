<Window x:Class="Library.Presentation.View.UserActionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Presentation.View"
        mc:Ignorable="d"
        Title="UserActionsWindow" Height="500" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding UserString}"></TextBlock>
        <UniformGrid Margin="5" Columns="1" Grid.Row="1">
            <Button Command="{Binding BorrowCommand}" Margin="5">Borrow a Book</Button>
            <Button Command="{Binding ReturnCommand}" Margin="5">Return a Book</Button>
            <Button Command="{Binding SelectOtherUserCommand}" Margin="5">Select Other User</Button>
        </UniformGrid>
    </Grid>
</Window>
